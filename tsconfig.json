{
  "include": ["src"],
  "exclude": ["test", "example"],
  "compilerOptions": {
    "module": "es5",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "outDir": "lib",
    "skipLibCheck": true,
    "types": ["./src/global"]
  }
}
