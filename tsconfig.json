{
  "include": ["src"],
  "exclude": ["test", "example"],
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "outDir": "./lib"
  }
}
