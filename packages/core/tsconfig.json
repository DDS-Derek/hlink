{
  "include": ["src"],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
